.user .user_header {
  display: flex;
}
.user .user_header image {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background-size: 100% 100%;
  z-index: -1;
}
.user .user_header .header_title {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  height: 50rpx;
  margin-top: 20rpx;
}
.user .user_header .header_title .header_sign {
  justify-content: space-evenly;
  align-items: center;
  border-radius: 30rpx;
  width: 140rpx;
  color: #ffffff;
  display: flex;
  font-size: 32rpx;
  background-color: rgba(0, 0, 0, 0.2);
}
.user .user_header .header_title .header_sign .iconfont {
  font-size: 32rpx;
}
.user .user_header .header_title .header_vip {
  justify-content: space-evenly;
  align-items: center;
  border-radius: 30rpx;
  width: 140rpx;
  color: #ffffff;
  display: flex;
  font-size: 32rpx;
  margin: 0 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
}
.user .user_header .header_title .header_vip .iconfont {
  font-size: 38rpx;
}
.user .user_info {
  display: flex;
  padding: 20rpx;
  justify-content: center;
  align-items: center;
}
.user .user_info .info_img {
  flex: 1;
}
.user .user_info .info_img image {
  border-radius: 50%;
}
.user .user_info .info_img button {
  position: absolute;
  top: 90rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  opacity: 0;
}
.user .user_info .info_text {
  flex: 4;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.user .user_info .info_text .info_text_content {
  margin-bottom: 10rpx;
  font-size: 40rpx;
  font-weight: 600;
}
.user .user_info .info_text .info_text_content button {
  position: absolute;
  top: 105rpx;
  width: 240rpx;
  height: 60rpx;
  opacity: 0;
}
.user .user_info .info_text .info_text_btn {
  width: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #eed09c;
  background-color: #000000;
  font-size: 28rpx;
  border-radius: 30rpx;
}
.user .become_vip {
  height: 70rpx;
  margin: 0 20rpx;
  border-radius: 20rpx 20rpx 0 0;
  background-color: #37312b;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.user .become_vip .vip_img {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}
.user .become_vip .vip_left_text {
  flex: 10;
  color: #ffdea0;
}
.user .become_vip .vip_right_text {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}
.user .become_vip .vip_right_text .iconfont {
  font-size: 24rpx;
}
.user .user_main {
  background-color: #f8f8f8;
  padding: 20rpx;
}
.user .user_main .user_main_info {
  background-color: #fff;
  border-radius: 30rpx;
  display: flex;
}
.user .user_main .user_main_info .info_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user .user_main .user_main_info .info_item .info_item_num {
  margin-top: 14rpx;
  font-weight: 600;
}
.user .user_main .user_main_info .info_item .info_item_name {
  margin: 14rpx 0;
  color: #a0a0a0;
}
.user .user_main .user_main_indent {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
}
.user .user_main .user_main_indent .indent_title {
  height: 100rpx;
  display: flex;
  border-bottom: solid 1rpx #cccccc;
  margin-left: 20rpx;
}
.user .user_main .user_main_indent .indent_title .indent_title_left {
  font-size: 36rpx;
  font-weight: 600;
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.user .user_main .user_main_indent .indent_title .indent_title_right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex: 6;
  color: #cccccc;
}
.user .user_main .user_main_indent .indent_title .indent_title_right .iconfont {
  font-size: 22rpx;
}
.user .user_main .user_main_indent .indent_content {
  display: flex;
  padding: 20rpx;
}
.user .user_main .user_main_indent .indent_content .content_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.user .user_main .user_main_indent .indent_content .content_item .iconfont {
  font-size: 46rpx;
  color: #333333;
}
.user .user_main .user_main_indent .indent_content .content_item .item_text {
  padding: 12rpx 0;
  color: #717171;
}
.user .user_main .user_main_indent .indent_content .content_item .item_num {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  background-color: orangered;
  border-radius: 50%;
  top: -20rpx;
  left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user .user_main .user_main_details {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
}
.user .user_main .user_main_details .main_details_item {
  width: 97.5%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: solid 1rpx #cccccc;
}
.user .user_main .user_main_details .main_details_item:last-of-type {
  border-bottom: none;
}
.user .user_main .user_main_details .main_details_item .left {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
