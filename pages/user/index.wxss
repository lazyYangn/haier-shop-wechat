  justify-content: flex-start;
  font-size: 28rpx;
  color: #a0a0a0;
}
.user .user_main .user_main_details .main_details_item .right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user .user_main .user_main_address {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
}
.user .user_main .user_main_address .main_address_item {
  width: 97%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
