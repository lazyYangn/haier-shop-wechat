  font-size: 28rpx;
  color: #a0a0a0;
}
.user .user_main .user_main_address .main_address_item .right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user .user_main .user_main_person {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  border-bottom: solid 1rpx #cccccc;
}
.user .user_main .user_main_person:last-of-type {
  border-bottom: none;
}
.user .user_main .user_main_person .main_person_item {
  width: 97.5%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: solid 1rpx #cccccc;
}
.user .user_main .user_main_person .main_person_item:last-of-type {
  border-bottom: none;
