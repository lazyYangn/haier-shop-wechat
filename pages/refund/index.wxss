.refund_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.refund_wrap .refund_img {
  flex: 4;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 300rpx 0 0 0;
}
.refund_wrap .refund_img image {
  width: 20%;
}
.refund_wrap .refund_text {
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #9fa0a1;
}
.refund_wrap .refund_text view {
  padding: 10rpx;
}
