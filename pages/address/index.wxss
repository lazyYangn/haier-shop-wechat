page {
  background-color: #f9f9f9;
}
.address_main .address_wrap {
  background-color: #fff;
  border-radius: 15rpx;
  margin: 15rpx auto;
  width: 90%;
  display: flex;
  align-items: center;
  height: 80rpx;
}
.address_main .address_wrap .left {
  padding: 20rpx;
  flex: 1;
  display: flex;
  justify-content: flex-end;
  color: #00c800;
  font-size: 32rpx;
}
.address_main .address_wrap .get_address {
  flex: 6;
}
.address_main .address_wrap .right {
  flex: 5;
  display: flex;
  justify-content: flex-end;
}
.address_main .set_address {
  background-color: #fff;
  border-radius: 15rpx;
  margin: 15rpx auto;
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20rpx;
}
.address_main .set_address view {
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  align-items: center;
  color: #b0b0b0;
}
.address_main .set_address view text {
  color: #ccc;
}
.addrss_btn {
  background-color: #ff4444;
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border-radius: 15rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}
